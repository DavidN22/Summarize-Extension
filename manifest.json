{
    "manifest_version": 3,
    "name": "Gpt API Summarize",
    "version": "1.0",
    "description": "add here",
    "permissions": ["activeTab", "storage"],
    "web_accessible_resources": [
        {
          "resources": ["styles.css"],
          "matches": ["<all_urls>"]
        }
    ],    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
      }
    ],
    "icons": {
      "48": "icon48.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon48.png"
    }
  }